# amlogic-i2c.ko
CONFIG_I2C_COMPAT=y

# build in for amlogic memory change
CONFIG_AMLOGIC_MEMORY_EXTEND=y
CONFIG_AMLOGIC_MEM_DEBUG=y
CONFIG_AMLOGIC_CMA=y
CONFIG_INIT_ON_ALLOC_DEFAULT_ON=n

# amlogic-debug.ko
CONFIG_AMLOGIC_DEBUG=m
CONFIG_AMLOGIC_DEBUG_LOCKUP=y
CONFIG_AMLOGIC_DEBUG_ATRACE=y
CONFIG_AMLOGIC_DEBUG_TEST=n
CONFIG_AMLOGIC_DEBUG_FILE=n

# enable for fatload console
CONFIG_DEVTMPFS=y
